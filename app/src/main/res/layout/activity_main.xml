<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--Head-->
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EADEB8"
        android:weightSum="3">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logodd"
            tools:srcCompat="@drawable/logodd" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/imcresoojin"
            android:hint="🥄검색창"

            />

        <ImageButton
            android:id="@+id/scrap"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/fridge" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ViewFlipper
                android:id="@+id/image_slide"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/textMain"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_background"
                    android:backgroundTint="#EADEB8"
                    android:fontFamily="@font/imcresoojin"
                    android:text="👨‍🍳든든한 한끼가 당신을 기다리고 있어요👩‍🍳" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:entries="@array/item"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#EADEB8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/imageBtnMain1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/icon2" />

                    <ToggleButton
                        android:id="@+id/toggleButton1"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/imageBtnMain1"
                        android:layout_marginTop="110dp"
                        android:layout_marginEnd="5dp"
                        android:text="ToggleButton" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/cost1"
                        android:fontFamily="@font/imcresoojin"
                        android:text="음식이름적어주세요"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/cost1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/imcresoojin"
                        android:text="가격적어주세요" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/imageBtnMain2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/icon2" />

                    <ToggleButton
                        android:id="@+id/toggleButton2"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/imageBtnMain2"
                        android:layout_marginTop="110dp"
                        android:layout_marginEnd="5dp"
                        android:text="ToggleButton" />

                    <TextView
                        android:id="@+id/Name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/cost2"
                        android:fontFamily="@font/imcresoojin"
                        android:text="음식이름적어주세요"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/cost2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/imcresoojin"
                        android:text="가격적어주세요" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/imageBtnMain3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/icon2" />

                    <ToggleButton
                        android:id="@+id/toggleButton3"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/imageBtnMain3"
                        android:layout_marginTop="110dp"
                        android:layout_marginEnd="5dp"
                        android:text="ToggleButton" />

                    <TextView
                        android:id="@+id/Name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/cost3"
                        android:fontFamily="@font/imcresoojin"
                        android:text="음식이름적어주세요"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/cost3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/imcresoojin"
                        android:text="가격적어주세요" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/imageBtnMain4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/icon2" />

                    <ToggleButton
                        android:id="@+id/toggleButton4"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/imageBtnMain4"
                        android:layout_marginTop="110dp"
                        android:layout_marginEnd="5dp"
                        android:text="ToggleButton" />

                    <TextView
                        android:id="@+id/Name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/cost4"
                        android:fontFamily="@font/imcresoojin"
                        android:text="음식이름적어주세요"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/cost4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/imcresoojin"
                        android:text="가격적어주세요" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/imageBtnMain5"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/icon2" />

                    <ToggleButton
                        android:id="@+id/toggleButton5"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/imageBtnMain5"
                        android:layout_marginTop="110dp"
                        android:layout_marginEnd="5dp"
                        android:text="ToggleButton" />

                    <TextView
                        android:id="@+id/name5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/cost5"
                        android:fontFamily="@font/imcresoojin"
                        android:text="음식이름적어주세요"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/cost5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/imcresoojin"
                        android:text="가격적어주세요" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/imageBtnMain6"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/icon2" />

                    <ToggleButton
                        android:id="@+id/toggleButton6"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/imageBtnMain6"
                        android:layout_marginTop="110dp"
                        android:layout_marginEnd="5dp"
                        android:text="ToggleButton" />

                    <TextView
                        android:id="@+id/name6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/cost6"
                        android:fontFamily="@font/imcresoojin"
                        android:text="음식이름적어주세요"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/cost6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/imcresoojin"
                        android:text="가격적어주세요" />

                </RelativeLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <!--Body-->

</LinearLayout>