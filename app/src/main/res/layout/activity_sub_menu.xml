    <TextView
        android:id="@+id/textrecipe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:text="1. 계란후라이를 만든다"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textrecipe2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:text="2. 밥을 기름에 볶는다."
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textrecipe3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:text="3. 간장 1스푼 넣는다."
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textrecipe4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:text="4. 마지막으로 약불에 1분간 볶는다."
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edtcomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="메모 입력" />

    <Button
        android:id="@+id/buttoncomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="입력 완료" />


